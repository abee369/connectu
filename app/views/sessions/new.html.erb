<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: { action: 'create' } do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <div class="login-footer"><%= f.submit "Log in", class: "btn btn-primary" %></div>
    <% end %>

    <div class="signup-footer"><p>New user? <%= link_to "Sign up now!", signup_path %></p></div>
  </div>
</div>
