<h1>My Attendences Listing</h1>
<%= link_to 'New attendance', new_attendance_path %>
<table>

  <% @attendances.each do |attendance| %>
    <tr>
    	<td> <%= attendance %></td>
      <td><%= link_to  'Show', attendance_path(attendance) %></td>
       <td><%= link_to 'Edit', attendance_path(attendance) %></td>
       <td><%= link_to 'Destroy', attendance_path(attendance),
                method: :delete, 
                data: { confirm: 'Are you sure?' } %></td>
      
    </tr>
  <% end %>
</table>



